%{?mingw_package_header}

%global name1 drmingw

Name:           mingw-%{name1}
Version:        0.9.2
Release:        3%{?dist}
Summary:        Just-in-Time (JIT) debugger for MinGW

License:        LGPLv2+
URL:            https://github.com/jrfonseca/%{name1}
Source0:        https://github.com/jrfonseca/%{name1}/archive/%{version}.tar.gz
# use system instead of bundled zlib
Patch0:         drmingw-unbundlezlib.patch
# compile fixes to be upstreamed
Patch1:         drmingw-compilefix.patch

BuildRequires:  mingw32-filesystem
BuildRequires:  mingw64-filesystem
BuildRequires:  mingw32-gcc
BuildRequires:  mingw64-gcc
BuildRequires:  mingw32-binutils
BuildRequires:  mingw64-binutils

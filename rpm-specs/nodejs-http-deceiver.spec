%{?nodejs_find_provides_and_requires}

%global packagename http-deceiver

# Test is failing, see https://github.com/spdy-http2/http-deceiver/issues/2
%global enable_tests 0

Name:		nodejs-http-deceiver
Version:	1.2.7
Release:	8%{?dist}
Summary:	Deceive HTTP parser

License:	MIT
URL:		https://github.com/indutny/http-deceiver
Source0:	https://registry.npmjs.org/%{packagename}/-/%{packagename}-%{version}.tgz


ExclusiveArch:	%{nodejs_arches} noarch
BuildArch:	noarch

BuildRequires:	nodejs-packaging
%if 0%{?enable_tests}
BuildRequires:	mocha
BuildRequires:	npm(handle-thing)
BuildRequires:	npm(readable-stream)
BuildRequires:	npm(stream-pair)
%endif

%description
Deceive HTTP parser


%prep
%autosetup -n package
sed -e '0,/^## LICENSE/d' README.md > LICENSE

%build
# nothing to do!

%install
mkdir -p %{buildroot}%{nodejs_sitelib}/%{packagename}
cp -pr package.json lib/ \
	%{buildroot}%{nodejs_sitelib}/%{packagename}

%nodejs_symlink_deps

%check
%nodejs_symlink_deps --check
%{__nodejs} -e 'require("./")'
%if 0%{?enable_tests}
%{_bindir}/mocha -R spec
%else
%{_bindir}/echo -e "\e[101m -=#=- Tests disabled -=#=- \e[0m"
%endif

%files
%doc README.md
%license LICENSE
%{nodejs_sitelib}/%{packagename}


%bcond_without check

# https://github.com/lib/pq
%global goipath         github.com/lib/pq
Version:                1.3.0

%gometa

%global common_description %{expand:
A pure Go postgres driver for Go's database/sql package}

%global golicenses      LICENSE.md
%global godocs          example CONTRIBUTING.md README.md TESTS.md certs-README

%global gosupfiles glide.lock glide.yaml

Name:           %{goname}
Release:        1%{?dist}
Summary:        Pure Go postgres driver for database/sql

License:        MIT
URL:            %{gourl}
Source0:        %{gosource}
Source1:        glide.yaml
Source2:        glide.lock
# https://github.com/lib/pq/pull/943
Patch0001:      0001-Skip-TestCloseBadConn-if-PGHOST-is-a-Unix-domain-soc.patch

BuildRequires:  postgresql-test-rpm-macros

%description
%{common_description}

%gopkg

%prep
%goprep
%patch0001 -p1
cp %{S:1} %{S:2} .
mv certs/README certs-README

%install
%gopkginstall

%if %{with check}
%check
%postgresql_tests_run
export PGUSER=$(id -un) PGPASSWORD=$(id -un) PGDATABASE=$(id -un)
%gocheck
%endif

%gopkgfiles


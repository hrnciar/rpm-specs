%{?nodejs_find_provides_and_requires}

%global packagename circular-json

# Tests disabled until npm(tressa) and its dependencies are packaged in Fedora
# See 1493355
%global enable_tests 0

Name:		nodejs-circular-json
Version:	0.3.3
Release:	8%{?dist}
Summary:	JSON does not handle circular references. This version does

License:	MIT
URL:		https://github.com/WebReflection/circular-json
Source0:	https://registry.npmjs.org/%{packagename}/-/%{packagename}-%{version}.tgz
# The test files are not included in the npm tarball.
# Source1 is generated by running Source10, which pulls from the upstream
# version control repository.
Source1:	tests-%{version}.tar.bz2
Source10:	dl-tests.sh


ExclusiveArch:	%{nodejs_arches} noarch
BuildArch:	noarch

BuildRequires:	nodejs-packaging
%if 0%{?enable_tests}
BuildRequires:	npm(tressa)
%endif

%description
JSON does not handle circular references. This version does


%prep
%autosetup -n package
# setup the tests
%autosetup -T -D -a 1 -n package

%build
# nothing to do!

%install
mkdir -p %{buildroot}%{nodejs_sitelib}/%{packagename}
cp -pr package.json build/ \
	%{buildroot}%{nodejs_sitelib}/%{packagename}

%nodejs_symlink_deps

%check
%nodejs_symlink_deps --check
%{__nodejs} -e 'require("./")'
%if 0%{?enable_tests}
%{_bindir}/mocha -R spec
%else
%{_bindir}/echo -e "\e[101m -=#=- Tests disabled -=#=- \e[0m"
%endif

%files
%doc README.md
%license LICENSE.txt
%{nodejs_sitelib}/%{packagename}


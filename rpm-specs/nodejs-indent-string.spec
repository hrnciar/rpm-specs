%{?nodejs_find_provides_and_requires}

%global packagename indent-string
# tests disabled due to missing 'ava' test suite
%global enable_tests 0

Name:		nodejs-indent-string
Version:	3.0.0
Release:	9%{?dist}
Summary:	Indent each line in a string

License:	MIT
URL:		https://github.com/sindresorhus/indent-string.git
Source0:	https://registry.npmjs.org/%{packagename}/-/%{packagename}-%{version}.tgz
# The test files are not included in the npm tarball.
Source1:	https://raw.githubusercontent.com/sindresorhus/indent-string/v%{version}/test.js


ExclusiveArch:	%{nodejs_arches} noarch
BuildArch:	noarch

BuildRequires:	nodejs-packaging
BuildRequires:	npm(repeating)
%if 0%{?enable_tests}
BuildRequires:	npm(ava)
%endif

%description
Indent each line in a string


%prep
%setup -q -n package
# setup the tests
cp -p %{SOURCE1} .



%build
# nothing to do!

%install
mkdir -p %{buildroot}%{nodejs_sitelib}/%{packagename}
cp -pr package.json *.js \
	%{buildroot}%{nodejs_sitelib}/%{packagename}

%nodejs_symlink_deps

%check
%nodejs_symlink_deps --check
%{__nodejs} -e 'require("./")'
%if 0%{?enable_tests}
%{_bindir}/ava
%endif


%files
%{!?_licensedir:%global license %doc}
%doc *.md
%license license
%{nodejs_sitelib}/%{packagename}




%bcond_without check

# https://github.com/mitchellh/go-wordwrap
%global goipath         github.com/mitchellh/go-wordwrap
Version:                1.0.0

%gometa

# Remove in F33:
%global godevelheader %{expand:
Obsoletes:      golang-github-mitchellh-go-wordwrap-devel < 1.0.0-2
}

%global common_description %{expand:
Go-wordwrap is a package for Go that automatically wraps words into multiple
lines. The primary use case for this is in formatting CLI output, but of course
word wrapping is a generally useful thing to do.}

%global golicenses      LICENSE.md
%global godocs          README.md

%global gosupfiles glide.lock glide.yaml

Name:           %{goname}
Release:        5%{?dist}
Summary:        Go library for wrapping words in a string

License:        MIT
URL:            %{gourl}
Source0:        %{gosource}
Source1:        glide.yaml
Source2:        glide.lock

%description
%{common_description}

%gopkg

%prep
%goprep
cp %{S:1} %{S:2} .

%install
%gopkginstall

%if %{with check}
%check
%gocheck
%endif

%gopkgfiles


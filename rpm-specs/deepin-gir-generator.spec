find . -name ".gitignore" -delete
sed -i "s#go build#go build -buildmode pie -compiler gc -tags=\"rpm_crashtraceback \${BUILDTAGS:-}\" -ldflags \"\${LDFLAGS:-} -B 0x\$(head -c20 /dev/urandom|od -An -tx1|tr -d ' \\\n') -extldflags '-Wl,-z,relro -Wl,--as-needed  -Wl,-z,now -specs=/usr/lib/rpm/redhat/redhat-hardened-ld '\" -a -v -x#" Makefile

%build
mkdir -p out/src/pkg.deepin.io/gir/{glib-2.0,gio-2.0,gobject-2.0,gudev-1.0}
export GOPATH="%{gopath}"
%make_build

%install
%make_install
rm -rf lib.in out src test
%gopkginstall

%files
%doc CHANGELOG.md README.md
%license LICENSE

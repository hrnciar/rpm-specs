%{?nodejs_find_provides_and_requires}

%global enable_tests 0

Name:           nodejs-retry
Version:        0.12.0
Release:        4%{?dist}
Summary:        Retry strategies for failed operations

License:        MIT
URL:            https://github.com/tim-kos/node-retry
Source0:        https://registry.npmjs.org/retry/-/retry-%{version}.tgz
BuildArch:      noarch
ExclusiveArch:  %{nodejs_arches} noarch

BuildRequires:  nodejs-packaging

%if 0%{?enable_tests}
BuildRequires:  npm(fake)
BuildRequires:  npm(istanbul)
BuildRequires:  npm(tape)
%endif

%description
Abstraction for exponential and custom retry strategies for failed operations.


%prep
%autosetup -n package


%build
#nothing to do


%install
mkdir -p %{buildroot}%{nodejs_sitelib}/retry
cp -pr package.json index.js lib %{buildroot}%{nodejs_sitelib}/retry
%nodejs_symlink_deps


%check
%nodejs_symlink_deps --check
%__nodejs -e "require ('./')"
%if 0%{?enable_tests}
%__nodejs test/runner.js
%endif


%files
%doc README.md equation.gif example
%license License
%{nodejs_sitelib}/retry



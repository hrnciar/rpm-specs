%bcond_without check

# https://github.com/olekukonko/tablewriter
%global goipath         github.com/olekukonko/tablewriter
Version:                0.0.4
%global commit          163badb3bac6f72b6412c440be4824da4d9b7b51

%gometa

%global common_description %{expand:
ASCII Table Writer.}

%global golicenses      LICENSE.md
%global godocs          README.md README-csv2table.md

%global gosupfiles glide.lock glide.yaml

Name:           %{goname}
Release:        4%{?dist}
Summary:        ASCII table in Go

License:        MIT
URL:            %{gourl}
Source0:        %{gosource}
Source1:        glide.yaml
Source2:        glide.lock

BuildRequires:  golang(github.com/mattn/go-runewidth)

%description
%{common_description}

%gopkg

%prep
%goprep
cp %{S:1} %{S:2} .
mv csv2table/README.md README-csv2table.md

%build
for cmd in csv2table; do
  %gobuild -o %{gobuilddir}/bin/$(basename $cmd) %{goipath}/$cmd
done

%install
%gopkginstall
install -m 0755 -vd                     %{buildroot}%{_bindir}
install -m 0755 -vp %{gobuilddir}/bin/* %{buildroot}%{_bindir}/

%if %{with check}
%check
%gocheck
%endif

%files
%license %{golicenses}
%doc %{godocs}
%{_bindir}/*

%gopkgfiles


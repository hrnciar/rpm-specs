BuildRequires:  golang(golang.org/x/tools/go/buildutil)
BuildRequires:  golang(golang.org/x/tools/go/gcexportdata)
BuildRequires:  golang(golang.org/x/tools/go/types/typeutil)

%description
%{common_description}

%gopkg

%prep
%goprep
%patch0 -p1
# Remove extra dependencies
rm tests/misc_test.go build/build_test.go

%build
%gobuild -o %{gobuilddir}/bin/gopherjs %{goipath}

%install
%gopkginstall
install -m 0755 -vd                     %{buildroot}%{_bindir}
install -m 0755 -vp %{gobuilddir}/bin/* %{buildroot}%{_bindir}/

%if %{with check}
%check
%gocheck -d build -d tests
%endif

%files
%license LICENSE
%doc doc README.md
%{_bindir}/*


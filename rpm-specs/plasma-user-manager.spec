%global base_name user-manager

Name:    plasma-user-manager
Summary: Manage the users of your system
Version: 5.19.2
Release: 1%{?dist}

License: GPLv2
URL:     https://cgit.kde.org/user-manager.git/

%global revision %(echo %{version} | cut -d. -f3)
%if %{revision} >= 50
%global stable unstable
%else
%global stable stable
%endif
Source0: http://download.kde.org/%{stable}/plasma/%{version}/user-manager-%{version}.tar.xz

## upstream patches

## downstream patches
# FIXME: make unconditional and upstreamable
%if 0%{?fedora} > 27
Patch100:  plasma-user-manager-libxcrypt.patch
%endif

# allow upgrade path from user-manager copr
Obsoletes: user-manager < 5.5.0-10
Provides:  user-manager = %{version}-%{release}

BuildRequires: desktop-file-utils
BuildRequires: gettext
BuildRequires: extra-cmake-modules
BuildRequires: libpwquality-devel
BuildRequires: kf5-rpm-macros
BuildRequires: kf5-kdelibs4support-devel
BuildRequires: kf5-kcmutils-devel
BuildRequires: pkgconfig(Qt5Core)
BuildRequires: pkgconfig(Qt5Gui)
BuildRequires: pkgconfig(Qt5Widgets)

# https://bugzilla.redhat.com/show_bug.cgi?id=1398704
# lib/accountmodel.cpp: m_dbus = new AccountsManager("org.freedesktop.Accounts", "/org/freedesktop/Accounts" ...
Requires: accountsservice

%description
A simple system settings module to manage the users of your system.


%prep
%autosetup -n user-manager-%{version} -p1


%build
mkdir %{_target_platform}
pushd %{_target_platform}
%{cmake_kf5} ..
popd

%make_build -C %{_target_platform}


%install
make install/fast DESTDIR=%{buildroot} -C %{_target_platform}

%find_lang user_manager


%files -f user_manager.lang
%license COPYING
%{_kf5_qtplugindir}/user_manager.so
%{_kf5_datadir}/kservices5/user_manager.desktop
%{_kf5_datadir}/user-manager/
%{_kf5_datadir}/qlogging-categories5/user-manager.categories



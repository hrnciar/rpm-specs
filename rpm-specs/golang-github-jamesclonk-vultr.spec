%global goipath         github.com/JamesClonk/vultr
Version:                2.0.1

%gometa

%global common_description %{expand:
Vultr CLI and API client library, written in Go.}

%global golicenses      LICENSE
%global godocs          README.md

Name:           %{goname}
Release:        1%{?dist}
Summary:        Vultr CLI and API client library

License:        MIT
URL:            %{gourl}
Source0:        %{gosource}
# Go 1.15: https://github.com/JamesClonk/vultr/issues/75
Patch0:         0001-Convert-int-to-string-using-fmt.Sprint.patch

BuildRequires:  golang(github.com/jawher/mow.cli)
BuildRequires:  golang(golang.org/x/time/rate)

%if %{with check}
# Tests
BuildRequires:  golang(github.com/stretchr/testify/assert)
%endif

%description
%{common_description}

%gopkg

%prep
%goprep
%patch0 -p1

%build
%gobuild -o %{gobuilddir}/bin/vultr %{goipath}

%install
%gopkginstall
install -m 0755 -vd                     %{buildroot}%{_bindir}
install -m 0755 -vp %{gobuilddir}/bin/* %{buildroot}%{_bindir}/

%if %{with check}
%check
%gocheck
%endif

%files
%license LICENSE
%doc README.md

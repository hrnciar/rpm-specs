%{?nodejs_find_provides_and_requires}

%global packagename cross-spawn-async
%global enable_tests 1

Name:		nodejs-cross-spawn-async
Version:	2.2.4
Release:	8%{?dist}
Summary:	Cross platform child_process#spawn

License:	MIT
URL:		https://github.com/IndigoUnited/node-cross-spawn-async.git
Source0:	https://registry.npmjs.org/%{packagename}/-/%{packagename}-%{version}.tgz
# The test files are not included in the npm tarball.
# Source1 is generated by running Source10, which pulls from the upstream
# version control repository.
Source1:	tests-%{version}.tar.bz2
Source10:	dl-tests.sh


BuildArch:	noarch
%if 0%{?fedora} >= 19
ExclusiveArch: %{nodejs_arches} noarch
%else
ExclusiveArch: %{ix86} x86_64 %{arm} noarch
%endif

BuildRequires:	nodejs-packaging
BuildRequires:	npm(lru-cache)
BuildRequires:	npm(which)
%if 0%{?enable_tests}
BuildRequires:	mocha
BuildRequires:	npm(expect.js)
BuildRequires:	npm(rimraf)
%endif

%description
Cross platform child_process#spawn


%prep
%setup -q -n package
# setup the tests
%setup -q -T -D -a 1 -n package



%build
# nothing to do!

%install
mkdir -p %{buildroot}%{nodejs_sitelib}/%{packagename}
cp -pr package.json index.js lib/ \
	%{buildroot}%{nodejs_sitelib}/%{packagename}

%nodejs_symlink_deps

%check
%nodejs_symlink_deps --check
%{__nodejs} -e 'require("./")'
%if 0%{?enable_tests}
%{__nodejs} test/prepare && mocha -R spec --bail test/test
%else
%{_bindir}/echo -e "\e[101m -=#=- Tests disabled -=#=- \e[0m"

%endif


%files
%{!?_licensedir:%global license %doc}
%doc *.md
%license LICENSE
%{nodejs_sitelib}/%{packagename}



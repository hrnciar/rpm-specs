%bcond_without check

# https://github.com/src-d/gcfg
%global goipath         github.com/src-d/gcfg
Version:                1.4.0

%gometa

%global common_description %{expand:
Package gcfg reads "INI-style" text-based configuration files with "name=value"
pairs grouped into sections (gcfg files).}

%global golicenses      LICENSE
%global godocs          README

Name:           %{goname}
Release:        4%{?dist}
Summary:        Read "INI-style" text-based configuration files

# Upstream license specification: BSD-3-Clause
License:        BSD
URL:            %{gourl}
Source0:        %{gosource}

BuildRequires:  golang(gopkg.in/warnings.v0)

%if %{with check}
# Tests
BuildRequires:  golang(github.com/pkg/errors)
%endif

%description
%{common_description}

%gopkg

%prep
%goprep

%install
%gopkginstall

%if %{with check}
%check
# https://github.com/go-gcfg/gcfg/issues/17
%gocheck -d types
%endif

%gopkgfiles


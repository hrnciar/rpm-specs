# Generated by go2rpm 1
%bcond_without check

# https://github.com/phayes/freeport
%global goipath         github.com/phayes/freeport
Version:                1.0.2
%global tag             1.0.2

%gometa

%global common_description %{expand:
Get a free and open TCP port that is ready to use.}

%global golicenses      LICENSE.md
%global godocs          README.md

Name:           %{goname}
Release:        1%{?dist}
Summary:        Detect free and open TCP port

# Upstream license specification: BSD-3-Clause
License:        BSD
URL:            %{gourl}
Source0:        %{gosource}

%description
%{common_description}

%gopkg

%prep
%goprep

%build
for cmd in cmd/* ; do
  %gobuild -o %{gobuilddir}/bin/$(basename $cmd) %{goipath}/$cmd
done

%install
%gopkginstall
install -m 0755 -vd                     %{buildroot}%{_bindir}
install -m 0755 -vp %{gobuilddir}/bin/* %{buildroot}%{_bindir}/

%if %{with check}
%check
%gocheck
%endif

%files
%license LICENSE.md
%doc README.md
%{_bindir}/*

%gopkgfiles


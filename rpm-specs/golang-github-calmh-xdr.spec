# Generated by go2rpm
%bcond_without check

# https://github.com/calmh/xdr
%global goipath         github.com/calmh/xdr
Version:                1.1.0

%gometa

%global common_description %{expand:
This is an XDR marshalling/unmarshalling library. It uses code generation and
not reflection.}

%global golicenses      LICENSE
%global godocs          README.md

Name:           %{goname}
Epoch:          1
Release:        6%{?dist}
Summary:        Go XDR enc/decoder

License:        MIT
URL:            %{gourl}
Source0:        %{gosource}

%description
%{common_description}

%gopkg

%prep
%goprep

%build
for cmd in cmd/* ; do
  %gobuild -o %{gobuilddir}/bin/$(basename $cmd) %{goipath}/$cmd
done

%install
%gopkginstall
install -m 0755 -vd                     %{buildroot}%{_bindir}
install -m 0755 -vp %{gobuilddir}/bin/* %{buildroot}%{_bindir}/

%if %{with check}
%check
%gocheck
%endif

%files
%license LICENSE
%doc README.md
%{_bindir}/*

%gopkgfiles


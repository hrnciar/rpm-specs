%bcond_without check

# https://github.com/rverton/webanalyze
%global goipath         github.com/rverton/webanalyze
Version:                0.3.1

%gometa

%global common_description %{expand:
Port of Wappalyzer (uncovers technologies used on websites) in Go to automate
scanning.}

%global golicenses      LICENSE.txt
%global godocs          README.md

Name:           webanalyze
Release:        1%{?dist}
Summary:        Tool to uncovers technologies used on websites

License:        GPLv3
URL:            %{gourl}
Source0:        %{gosource}

BuildRequires:  golang(github.com/bobesa/go-domain-util/domainutil)
BuildRequires:  golang(github.com/PuerkitoBio/goquery)

%description
%{common_description}

%gopkg

%prep
%goprep

%build
for cmd in cmd/* ; do
  %gobuild -o %{gobuilddir}/bin/$(basename $cmd) %{goipath}/$cmd
done

%install
%gopkginstall
install -m 0755 -vd                     %{buildroot}%{_bindir}
install -m 0755 -vp %{gobuilddir}/bin/* %{buildroot}%{_bindir}/

%if %{with check}
%check
%gocheck
%endif

%files
%license LICENSE.txt
%doc README.md
%{_bindir}/*


BuildRequires:  golang(github.com/fatih/color)
BuildRequires:  golang(github.com/mattn/go-isatty)
BuildRequires:  golang(github.com/posener/complete)
BuildRequires:  golang(github.com/posener/complete/cmd/install)

%description
%{common_description}

%gopkg

%prep
%goprep
cp %{S:1} %{S:2} .

%install
%gopkginstall

%if %{with check}
%check
%gocheck
%endif

